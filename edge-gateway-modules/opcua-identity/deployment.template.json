{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "<YOUR_ACR_REGISTRY_NAME>": {
                "username": "$CONTAINER_REGISTRY_USERNAME_<YOUR_ACR_REGISTRY_NAME>",
                "password": "$CONTAINER_REGISTRY_PASSWORD_<YOUR_ACR_REGISTRY_NAME>",
                "address": "<YOUR_ACR_REGISTRY_NAME>.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "opcua_identity": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.opcua_identity}",
              "createOptions": {}
            },
            "env": {
              "dpsEnrollmentGroupSaskey": {
                "value": "${DPS_MASTER_SASKEY}"
              },
              "dpsScopeId": {
                "value": "${DPS_SCOPE_ID}"
              },
              "modelId": {
                "value": "${MODEL_ID}"
              },
              "gatewayId": {
                "value": "${GATEWAY_ID}"
              }
            }
          },
          "opcua_client": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.opcua_client}",
              "createOptions": {}
            },
            "env": {
              "opcuaServerUrl": {
                "value": "${OPCUA_SRVER_URL}"
              },
              "opcuaDeviceId": {
                "value": "${OPCUA_DEVICE_ID}"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "identity_to_iothub": "FROM /messages/modules/opcua_identity/outputs/* INTO $upstream",
          "opcua_client_to_identity": "FROM /messages/modules/opcua_client/outputs/output1 INTO BrokeredEndpoint(\"/modules/opcua_identity/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "opcua_client": {
      "properties.desired": {}
    }
  }
}